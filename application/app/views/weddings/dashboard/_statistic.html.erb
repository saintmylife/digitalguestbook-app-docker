<div class="row" id="statistic_row">
  <!-- Jumlah Undangan -->
  <div class="col-md-3">
    <div class="panel-dashboard rounded">
      <div class="row">
        <div class="col-sm-8">
          <h5 class="text-muted" style="font-weight: 600; margin-bottom: 4px; margin-top: 0">JUMLAH UNDANGAN</h5>
          <span class="title-card h1" id="total_guest"><%= @total_guest %></span>
        </div>
        <div class="col-sm-4">
          <i class="fa fa-users fa-4x"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="text-muted caption-card">Tambahan <span id="guest_tambahan" class="success-color"><%= @total_guest_tambahan %></span></p>
        </div>
      </div>
    </div>
  </div>
  <!-- Hadir -->
  <div class="col-md-3">
    <div class="panel-dashboard rounded">
      <div class="row">
        <div class="col-sm-8">
          <h5 class="text-muted" style="font-weight: 600; margin-bottom: 4px; margin-top: 0">HADIR</h5>
          <span class="title-card h1" id="guest_sudah_hadir_percentage"><%= number_to_percentage @guestSudahHadirPercentage, :precision => 2, :strip_insignificant_zeros => true %></span>
        </div>
        <div class="col-sm-4" style="text-align: right">
          <i class="fa fa-check-square fa-4x"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="text-muted caption-card">
            Undangan <span id="guest_sudah_hadir" class="success-color"><%= @guest_sudah_hadir %></span>
            -
            Jumlah Orang <span id="guest_sudah_hadir_jumlah" class="danger-color"><%= @total_orang %></span></p>
        </div>
      </div>
    </div>
  </div>
  <!-- Belum Hadir -->
  <div class="col-md-3">
    <div class="panel-dashboard rounded">
      <div class="row">
        <div class="col-sm-8">
          <h5 class="text-muted" style="font-weight: 600; margin-bottom: 4px; margin-top: 0">BELUM HADIR</h5>
          <span class="title-card h1" id="guest_belum_hadir_percentage"><%= number_to_percentage @guestBelumHadirPercentage, :precision => 2, :strip_insignificant_zeros => true %></span>
        </div>
        <div class="col-sm-4" style="text-align: right">
          <i class="fa fa-times fa-4x"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="text-muted caption-card">
            Dari total <span id="guest_belum_hadir" class="danger-color"><%= @guest_belum_hadir %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- Souvenir Terambil -->
  <div class="col-md-3">
    <div class="panel-dashboard rounded">
      <div class="row">
        <div class="col-sm-8">
          <h5 class="text-muted" style="font-weight: 600; margin-bottom: 4px; margin-top: 0">SOUVENIR TERAMBIL</h5>
          <span class="title-card h1" id="jumlah_souvenir_percentage"><%= number_to_percentage @jumlahSouvenirPercentage, :precision => 2, :strip_insignificant_zeros => true %></span>
        </div>
        <div class="col-sm-4">
          <i class="fa fa-american-sign-language-interpreting fa-4x"></i>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="text-muted caption-card">
            Dari total <span id="jumlah_souvenir" class="danger-color"><%= @jumlah_souvenir %></span>
            -
            Jumlah Souvenir <span id="souvenir_total" class="danger-color"><%= @souvenir_total %></span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .title-card {
        color: #32325d !important;
    }

    .rounded {
        border-radius: .875rem;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .caption-card {
        margin-top: 1rem;
        font-size: 1.2rem !important;
    }

    .success-color {
        color: #49C9B0;
    }

    .danger-color {
        color: red;
    }

    .caption-card span {
        font-weight: 600;
    }

    #statistic_row{
        display: flex;
        justify-content: center;
    }

    @media only screen and (max-width: 480px) {
        #statistic_row{
            display: unset;
            justify-content: unset;
        }
    }
</style>