<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            Edit Guest
        </h3>
    </div>
  <div class="panel-body">
    <%= simple_form_for @wedding do |f| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Guest ID</label>
        <div class="col-sm-10">
          <%= f.input :guest_id, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
        </div>
      </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Nama</label>
        <div class="col-sm-10">
          <%= f.input :nama, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Alamat</label>
          <div class="col-sm-10">
            <%= f.input :alamat, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
          </div>
        </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Kategori</label>
          <div class="col-sm-10">
            <%= f.input :kategori, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Nama Meja</label>
            <div class="col-sm-10">
              <%= f.input :nama_meja, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Jumlah Undangan</label>
              <div class="col-sm-10">
                <%= f.input :jumlah_undangan, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
              </div>
            </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Status</label>
              <div class="col-sm-10">
                <%= f.input :status, label:false, placeholder:"VIP/VVIP", input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
              </div>
            </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
          <div class="col-sm-10">
            <%= link_to "Back", master_weddings_path, class:"btn btn-danger"%>
            <%= f.button :submit, "Edit Data", class:"btn btn-success" %>
          </div>
      </div>
          <% end %>
</div>
