<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Report Wedding
    </h3>
  </div>
  <div class="panel-body">
    <%= form_tag  report_weddings_path, method: "GET", class: 'form-horizontal' do %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Pilih Event</label>
        <div class="col-sm-10">
          <select name="event_id" class="form-control">
            <% @events.each do |event| %>
              <option value="<%= event.id %>"><%= event.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
          <%= submit_tag 'Submit', class: 'btn btn-success' %>
          <% if params[:event_id].present? %>
            <%= link_to 'Download as .xlsx', report_weddings_path(format: :xlsx, event_id: params[:event_id], jenis_kategori: params[:jenis_kategori]) %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>

</div>
