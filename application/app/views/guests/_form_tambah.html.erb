<%= simple_form_for @guest do |f| %>
<div class="form-group">
  <label class="col-sm-2 control-label">Event ID</label>
    <div class="col-sm-10">
        <%= f.input :event_id,label:false, placeholder: @eventid, disabled: true, as: :string, input_html: { class: 'form-control form-control-sm' ,style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Guest ID</label>
    <div class="col-sm-10">
      <%= f.input :guest_id, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' } %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Nama</label>
    <div class="col-sm-10">
      <%= f.input :nama, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Alamat</label>
    <div class="col-sm-10">
      <%= f.input :alamat, label:false, required: false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Kategori</label>
    <div class="col-sm-10">
      <%= f.input :kategori, label:false, required: false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Nama Meja</label>
    <div class="col-sm-10">
      <%= f.input :nama_meja, label:false, required: false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Jumlah Undangan</label>
    <div class="col-sm-10">
      <%= f.input :jumlah_undangan, label:false, required: false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      <%= f.button :submit, "Tambah Data", class:"btn btn-success" %>
    </div>
</div>

<% end %>
