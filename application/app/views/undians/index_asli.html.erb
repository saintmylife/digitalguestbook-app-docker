<div class="panel panel-default">
  <div class="panel-heading">
    <h3 style="text-align:center;font-size:20px;"> DOORPRIZE</h3>
    <div style ="text-align:center;font-size:36px;"><b><%= active_wedding_name %></b></div>
      </div>


<div class="panel-body">
	<div align="center" id="luckyname" style="font-size: 240px;padding: 5px 10px 5px 10px;">
	</div>
	<div align="center" id="loading">
	</div>
	 <button type="button" class="btn btn-primary btn-lg center-block" id="load" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Memilih Pemenang">Pilih Pemenang</button>
</div>
  </div>


<script type="text/javascript">
	$('.btn-primary').on('click', function(){
		var $this = $(this);
		$this.button('loading');
		$('#luckyname').hide();
		 $('#loading').html('<%= j image_tag "luckydraw.gif" %><br><br>');
		setTimeout(function() {
			$.getJSON('/undians/thechoosen',function(data){
            if( !($.isEmptyObject(data)) ){
              // $('#luckyname').html('<p>'+data.nama+'<p>'+'<p>'+(data.guest_id)+'<p>');
    					$('#luckyname').html('<p>'+'<p>'+(data.guest_id)+'<p>');
    				} else {
    					$('#luckyname').html('<p> Belum Ada yang Check In <p>');
            };

				console.log(data);
				$('#loading').html(' ');
				$('#luckyname').show();
			});
			$this.button('reset');
		}, 5000);
	});
</script>
