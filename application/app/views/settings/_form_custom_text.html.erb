<% if @setting.custom_one == false && @setting.custom_two == false && @setting.custom_three == false && @setting.custom_four == false && @setting.custom_five == false %>
  <div></div>
<% else %>
  <h4>Custom Field Title</h4>
  <hr>
<% end %>
  <%= form_for @setting, url: customtext_setting_path(@setting), :html => {:class => 'form-horizontal'} do |f| %>
    <% if @setting.custom_one == true %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Custom One</label>
        <div class="col-sm-10">
          <%= f.text_field :custom_one_text, class:"form-control", placeholder:"Input custom field title" %>
        </div>
      </div>
    <% end %>

    <% if @setting.custom_two == true %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Custom Two</label>
        <div class="col-sm-10">
          <%= f.text_field :custom_two_text, class:"form-control form-control-sm", placeholder:"Input custom field title" %>
        </div>
      </div>
    <% end %>

    <% if @setting.custom_three == true %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Custom Three</label>
        <div class="col-sm-10">
          <%= f.text_field :custom_three_text, class:"form-control form-control-sm", placeholder:"Input custom field title" %>
        </div>
      </div>
    <% end %>

    <% if @setting.custom_four == true %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Custom Four</label>
        <div class="col-sm-10">
          <%= f.text_field :custom_four_text, class:"form-control form-control-sm", placeholder:"Input custom field title" %>
        </div>
      </div>
    <% end %>

    <% if @setting.custom_five == true %>
      <div class="form-group">
        <label class="col-sm-2 control-label">Custom Five</label>
        <div class="col-sm-10">
          <%= f.text_field :custom_five_text, class:"form-control form-control-sm", placeholder:"Input custom field title" %>
        </div>
      </div>
    <% end %>

    <% if @setting.custom_one == false && @setting.custom_two == false && @setting.custom_three == false && @setting.custom_four == false && @setting.custom_five == false %>
      <div></div>
    <% else %>
      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
          <%= f.submit 'Simpan', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  <% end %>
