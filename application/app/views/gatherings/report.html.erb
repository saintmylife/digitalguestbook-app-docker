        <label class="col-sm-2 control-label">Kategori</label>
        <div class="col-sm-10" id="jenis_kategori">
          <select class="form-control select2" name="jenis_kategori">
            <option value="all">Semua</option>
            <%# @jenis_kategori.each do |jk| %>
              <option value="<%#= jk %>"><%#= jk %></option>
            <%# end %>
          </select>
        </div>
      </div> -->
      <!--
      <div class="form-group">
        <label class="col-sm-2 control-label">Kategori</label>
        <div class="col-sm-10" id="jenis_kategori">
          <select class="form-control select2" name="presence">
            <option value="all">Semua</option>
            <option value="hadir">Hadir</option>
            <option value="tidak_hadir">Tidak Hadir</option>
          </select>
        </div>
      </div>
      -->
      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
          <%= submit_tag 'Submit', class: 'btn btn-success' %>
          <% if params[:event_id].present? %>
            <%= link_to 'Download as .xlsx', report_gatherings_path(format: :xlsx, event_id: params[:event_id], jenis_kategori: params[:jenis_kategori], class: 'btn btn-default') %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
