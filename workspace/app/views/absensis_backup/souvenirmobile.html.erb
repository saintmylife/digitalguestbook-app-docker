      <%= @settingwedd2.custom_one_text.present? ? @settingwedd2.custom_one_text : active_wedding_name %>
      </span><br>
      <span class="active-wedding-name">
      <%= @settingwedd2.custom_two_text.present? ? @settingwedd2.custom_two_text : "" %>
      <%#  active_wedding_name %>
