<%= simple_form_for @event, remote: true do |f| %>

<%= f.input :status, label:false, as: :hidden, input_html: { :value => @eventstatus}  %>

<div class="form-group">
  <label class="col-sm-2 control-label">Nama</label>
    <div class="col-sm-10">
      <%= f.input :name, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Tanggal</label>
    <div class="col-sm-10">
      <%= f.input :date, label:false, input_html: { class:"datepicker",style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Pemilik Event</label>
    <div class="col-sm-10">
      <%= f.input :event_owner, label:false, input_html: { class: 'form-control form-control-sm',style:'margin-bottom:10px;' }  %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label">Jenis Event</label>
    <div class="col-sm-10">
      <%= f.collection_select(:type_of_event_id, TypeOfEvent.all, :id, :name, include_blank: false, input_html: {class:'form-control form-control-sm',style:'margin-bottom:10px;'}) %>
    </div>
  </div>

<div class="form-group">
  <label class="col-sm-2 control-label"></label>
    <div class="col-sm-10">
      <%= link_to 'Kembali',events_path, class: 'btn btn-danger' %>
      <%= f.button :submit, "Edit Data", class:"btn btn-success" %>
    </div>
</div>
<% end %>
