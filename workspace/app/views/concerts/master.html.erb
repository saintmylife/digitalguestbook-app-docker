<div class="panel panel-default" id="master-data-concert">
  <div class="panel-heading">
    <h3 class="panel-title">Master Data</h3><br>
  </div>

  <div class="panel-body" >
    <h4><div class="alert alert-info">Data Concert yang sedang aktif : <b><u><%= active_wedding_name %></u></b></div></h4>
    <hr>
    <div class="row">
      <%= form_tag master_concerts_path, :method => 'GET' do %>
      <div class="col-sm-5">
      <%= text_field_tag :search ,params[:search], class: "form-control form-control-sm", placeholder: "Search" %>
      <input id="name" name="name" type="hidden" value="Concerts">
      <div class="checkbox col-sm">
        Pencarian :
        <label>
          <%= radio_button_tag 'checkbox',0,true%> Nama</label>
        <label>
          <%= radio_button_tag 'checkbox',1,false %> Guest ID</label>
        <label>
          <%= radio_button_tag 'checkbox',2,false %> Jenis Tiket</label>
        <label>
          <%= radio_button_tag 'checkbox',3,false %> Kelas</label>
        <label>
          <%= radio_button_tag 'checkbox',4,false %> Identifikasi</label>
      </div>
      </div>
      <%= submit_tag "Search",class:'btn btn-success col-sm-0' %>
      <%= submit_tag "Reset", :name => "reset_button", class:'btn btn-danger col-sm-0' %>
      <%= link_to "Back", masterdata_concerts_path, class:'btn btn-primary waves-effect' %>

      <% end %>
    </div>


    <table class="table table-hovered table-bordered margin10 pretty">
      <thead>
        <tr>
          <th style="text-align:center;line-height: 40px;"><%= sortable "guest_id", "ID" %></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "kategori", "Kategori"%></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "nama", "Nama"%></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "jenis_tiket", "Jenis tiket" %></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "class_user", "Kelas" %></th>
          <th style="text-align:center;line-height: 40px;">Identifikasi</th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "ticket", "Status Kwitansi" %></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "time_of_get_ticket", "Waktu Tukar Kwitansi"%></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "presence", "Status Kehadiran" %></th>
          <th style="text-align:center;line-height: 40px;"><%= sortable "time_of_entry", "Waktu Kehadiran" %></th>
          <th style="text-align:center;line-height: 40px;">Print QR</th>
          <th colspan="2" style="text-align:center;line-height: 40px;">Action</th>
        </tr>
      </thead>
      <tbody id='list_wedding'>
        <%= render 'list_concert' %>
      </tbody>
    </table>
    <div class="pull-right">
          <%= paginate @concerts %>
    </div>

  </div>
</div>

<script>

</script>
